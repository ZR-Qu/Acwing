{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: Debug (Output Folder)",
      "type": "cppdbg",
      "request": "launch",
      // 1. 去 output 文件夹找编译好的 exe
      "program": "${fileDirname}\\output\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      
      // 2. 【关键】开启外部独立黑窗口
      "externalConsole": false,
      
      "MIMode": "gdb",
      "miDebuggerPath": "D:\\VSCode\\mingw64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // 3. 必须和 tasks.json 里的 label 完全一致
      "preLaunchTask": "C/C++: g++.exe 生成活动文件"
    }
  ]
}