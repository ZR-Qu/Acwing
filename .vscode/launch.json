{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++: Debug (Output Folder)",
      "type": "cppdbg",
      "request": "launch",
      // 在output文件夹中寻找exe
      "program": "${fileDirname}\\output\\${fileBasenameNoExtension}.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      
      // 是否开启外部终端
      "externalConsole": false,
      
      "MIMode": "gdb",
      "miDebuggerPath": "D:\\VSCode\\mingw64\\bin\\gdb.exe",
      "setupCommands": [
        {
          "description": "为 gdb 启用整齐打印",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // 须与tasks.json中的label一致
      "preLaunchTask": "C/C++: g++.exe 生成活动文件"
    }
  ]
}